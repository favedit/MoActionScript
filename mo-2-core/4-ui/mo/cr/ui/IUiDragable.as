package mo.cr.ui
{
   //============================================================
   // <T>界面可拖拽接口。</T>
   //============================================================
   public interface IUiDragable
   {
      //============================================================
      // <T>获得可停泊对象。</T>
      //
      // @return 可停泊对象
      //============================================================
      function get dockControl():IUiDockable;
      
      //============================================================
      // <T>设置可停泊对象。</T>
      //
      // @param p:dock 可停泊对象
      //============================================================
      function set dockControl(p:IUiDockable):void;
      
      //============================================================
      // <T>开始拖拽处理。</T>
      //
      // @param e:event 拖拽事件
      //============================================================
      function onDragBegin(e:FDragEvent):void;
      
      //============================================================
      // <T>拖拽中处理。</T>
      //
      // @param e:event 拖拽事件
      //============================================================
      function onDraging(e:FDragEvent):void;

      //============================================================
      // <T>结束拖拽处理。</T>
      //
      // @param e:event 拖拽事件
      //============================================================
      function onDragEnd(e:FDragEvent):void;
      
      //============================================================
      // <T>鼠标点击空白处是销毁还是返回空白处。</T>
      //============================================================
      function cancle():void;
   }
}