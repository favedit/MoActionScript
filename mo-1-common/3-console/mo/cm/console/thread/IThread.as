package mo.cm.console.thread
{
   //============================================================
   // <T>线程接口。</T>
   //============================================================
   public interface IThread
   {
      //============================================================
      // <T>判断是否指定状态。</T>
      //============================================================
      function isStatus(statusCd:int):Boolean;

      //============================================================
      // <T>开始执行处理。</T>
      //============================================================
      function start():void;
      
      //============================================================
      // <T>结束执行处理。</T>
      //============================================================
      function stop():void;
      
      //============================================================
      // <T>执行处理。</T>
      //
      // @return true:表示当此处理为完成
      //============================================================
      function execute():Boolean;
   }
}